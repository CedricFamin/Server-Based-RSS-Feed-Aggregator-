@{
    ViewBag.Title = "Feeds List";
    
}
<div class="row-fluid">
	<div class="box span12">
		<div class="box-header">
			<h2><i class="icon-th"></i><span class="break"></span>@ViewBag.Title</h2>
			<div class="box-icon">
				<a href="#" class="btn-minimize"><i class="icon-chevron-up"></i></a>
				<a href="#" class="btn-close"><i class="icon-remove"></i></a>
			</div>
		</div>
		<div class="box-content">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Feed</th>
                        <th>URL</th>
                        <th>Description</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var channel in (ViewBag.Feeds as Client_ASP.FeedServ.Channel[]))
                    {
                        <tr>
                            <td>@Html.ActionLink(channel.Title, "Feed", "Feeds", channel, null)</td>
                            <td><a href="@channel.Link">@channel.Link</a></td>
                            <td>@channel.Description.ToString()</td>
                            <td>@Html.ActionLink("X", "Delete", "Feeds", channel, null)</td>
                        </tr>
                    }
                        
                </tbody>
            </table>
        </div>
    </div>
</div>
